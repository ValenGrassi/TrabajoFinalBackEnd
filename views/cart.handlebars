<h1>Mi Carrito</h1> 
<a href="/realtimeproducts">Volver a los productos</a> <br>
<p>id:{{carrito._id}}</p>
<u>Productos:</u>
<ul> 
    {{#each carrito.products}}
        <li>{{this.title}}: ${{this.price}}, cantidad: {{this.quantity}}u.</li>
        <form id="formDeleteProduct" data-cartid="{{../carrito._id}}" data-productid="{{this._id}}">
            <button type="submit">Eliminar del carrito</button>
        </form>
        <br>
    {{/each}}
</ul>
<h2>Total: ${{carrito.totalPrice}}</h2>
<form action="/api/carts/{{carrito._id}}/purchase" method="post">
    <button type="submit">Comprar</button>
</form>
<script src="/js/products.js"></script>
